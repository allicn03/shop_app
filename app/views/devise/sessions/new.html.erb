<div class="jumbotron">
  <%= video_tag "autumn-bike.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "video" %>
  <div class="container">
    <form>
      <h1 class="h1-login">Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
      </div>

      <div class="form-group">
        <%#= f.label :password %><!--<br /> ex. of form label-->
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "remember" %>
        </div>
        <div class="actions send btn login-button">
          <%= f.submit "Log in" %>
        </div>
        <div class="devise-shared-links">
          <%= render "devise/shared/links" %>
        </div>
        <% end -%>
      <% end %>
      </form>
  </div>
</div>
