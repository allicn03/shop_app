<div class="jumbotron">
  <!--Show product page -->
  <div class ="container-fluid content-container">
    <div class="row row-bike-detail">
<!--Bike detail-->
      <div data-product-id="<%= @product.id %>" class="col-md-6 col-12-xs bike-detail">
      <% cache @product do %>
        <div class="product-img-container">
          <%= image_tag(@product.image_url, class: "img-responsive img-zoom") %>
        </div>
      </div><!-- end bike detail -->
<!--Product description-->
      <div class="col-md-6 col-12-xs product description">
        <h2><%=@product.name %> <span><%= number_to_currency(@product.price, unit: "$") %></span></h2>
        <div class="average-rating">
          <span>Average rating</span>
          <div id="average-rating" clas="rated" data-score="<%= @product.average_rating %>"></div>
        </div><!--end average rating-->
        <p>Colour: <%= @product.colour %></p>
        <p><%= @product.description %></p>
      <% end %><!-- end cache -->
<!-- Top Review -->
      <% if @product.highest_rating_comment %>
        <div class="highest-rating">
          <h4>Top Review</h4>
          <div class="rated" data-score="<%= @product.highest_rating_comment.rating %>"></div>
          <span><%= @product.highest_rating_comment.user.first_name %> </span>
          <span><small><em><%= "#{time_ago_in_words(@product.highest_rating_comment.created_at)} ago" %></em></small></span>
          <p><%= @product.highest_rating_comment.body%></p>
        </div><!--end top review-->
      <% end %>
<!-- Comments -->
      <div class="col-md-12 comments-container">
        <%= render 'new_comment' %>
        <%= render 'comments' %>
      </div><!-- end comments -->
<!-- Pagination -->
      <div class="col-md-12 pagination-container">
        <%= will_paginate @comments, class: "comment-pagination" %>
      </div>
    </div><!-- end row -->
  </div><!-- end container-->
</div><!-- end jumbotron -->
