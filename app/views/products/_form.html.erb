<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
    <div class="form-group">
      <div class="field">
        <%=form.label :name %>
        <div class="text-field">
          <%= form.text_field :name, id: :product_name %>
        </div>
      </div>
      <!--<label for="inputEmail" class="control-label col-xs-2">Email</label>-->
      <!--<div class="col-md-4">-->
        <!--<input type="email" class="form-control" id="inputEmail" placeholder="Email">-->
      <!--</div>-->
    </div>
    <div class="form-group">
      <div class="field" id="description">
        <%= form.label :description %>
        <div class="text-field">
          <%= form.text_area :description, id: :product_description %>
        </div>
      </div>
      <!--<label for="inputPassword" class="control-label col-xs-1">Password</label>
      <div class="col-xs-5">
        <input type="password" class="form-control" id="inputPassword" placeholder="Passsword">
      </div>-->
    </div>
    <div class="form-group">
      <div class="field" id="image-url">
        <%= form.label :image_url %>
        <div class="text-field">
          <%= form.text_field :image_url, id: :product_image_url %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field" id="colour">
        <%= form.label :colour %>
        <div class="text-field">
          <%= form.text_field :colour %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field" id="price">
        <%= form.label :price %>
        <div class="text-field">
          <%= form.text_field :price %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field" id="comment">
        <%= form.label :comment %>
        <div class="text-field">
          <%= form.text_field :comment %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="actions">
        <%= form.submit %>
      </div>
    </div><!--end form div-->
  </form>
<% end %>
